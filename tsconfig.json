{
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS",
			"resolveJsonModule": true
		},
		"include": ["./*.ts"]
	},
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"out": "public/docs",
		"theme": "default",
		"readme": "none",
		"excludePrivate": true,
		"includeVersion": true,
		"hideGenerator": true
	},
	"compilerOptions": {
		"rootDir": ".",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"strictNullChecks": false
	},
	"include": ["src", "demo/src"]
}
