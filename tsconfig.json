{
	"include": [
		"./*.js",
		"./src",
		"./demo/src",
		"./test"
	],
	"compilerOptions": {
		// File Layout
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"spatial-controls": ["./src/index.js"]
		},
		// Environment Settings
		"moduleResolution": "bundler",
		"module": "es2022",
		"target": "es2022",
		// Style Options
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		// Other
		"noUncheckedSideEffectImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true
	}
}
